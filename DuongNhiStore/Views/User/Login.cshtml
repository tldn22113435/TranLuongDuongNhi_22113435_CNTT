@model DuongNhiStore.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <section class="card shadow-lg p-4">
            <h1 class="text-center mb-4">@ViewData["Title"]</h1>
            <form id="account" method="post" asp-action="Login" asp-controller="User">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Password" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mb-3">
                    <div>
                        <input type="checkbox" id="rememberMe" />
                        <label for="rememberMe">Remember Me</label>
                    </div>
                    <a href="#" class="text-muted">Forgot password?</a>
                </div>

                <button id="login-submit" type="submit" class="w-100 btn btn-primary btn-lg">Log In</button>

                <div class="mt-3 text-center">
                    <p>Don't have an account? <a asp-action="Register" asp-controller="User">Register</a></p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
